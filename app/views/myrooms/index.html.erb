<div class='main'>
  <div class='item-contents'>
     <h3 class='list2'>ユーザー投稿一覧</h3>
   <ul class='item-lists'>
      <% @posts.each do|post|%>
        <li class='list'>
          <p>
            <strong>Title:</strong>
            <%= post.title %>
          </p>
          <p>
            <strong>Text:</strong>
            <%= post.text %>
          </p>
               <strong>Category:</strong>
            <%= post.category.name %>
          </p>
          <div class='item-img-content'>
            <p>
              <strong>Image:</strong>
              <%= image_tag(post.image, class: "item-img") %>
            </p>
          </div>
        </li>
      <% end %>
   </ul>
  </div>
  <%= link_to '新規投稿ページ', new_myroom_path, class:"subtitle"%>
</div>