<h2>新規投稿ページ</h2>

<%= form_with model:@post, url: myrooms_path,local: true do |f| %> 
  <div class="img-upload">
    <div class="click-upload">
      <p>
        クリックして作品をアップロード
      </p>
      <span id="item-image" ><%= f.file_field :image %></span>
    </div>
      <div id="image-list"></div>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_area :title, autofocus: true, placeholder:"例) タイトル入力", maxlength:"40" %>
  </div>

    <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, autofocus: true,  placeholder:"例) テキスト入力", maxlength:"40" %>
  </div>

  <div class="form">
    <div class="weight-bold-text">
      Category
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
